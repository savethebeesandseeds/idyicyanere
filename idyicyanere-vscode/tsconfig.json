{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",

    "rootDir": "src",
    "outDir": "dist",

    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,

    "types": ["node", "vscode"],
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "dist", "native"]
}